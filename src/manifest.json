{
    "manifest_version": 2,
    "name": "ニコレポ・フィルター",
    "version": "1.0.1",
    "description": "ニコニコ動画のニコレポタイムラインにミュート・ハイライト機能を追加します。",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "permissions": [ "declarativeContent", "storage" ],
    "background": {
        "scripts": [ "js/background.js" ],
        "persistent": false
    },
    "page_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "24": "img/icon24.png",
            "32": "img/icon32.png"
        },
        "default_title": "ニコレポ・フィルター",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": [
            "http://www.nicovideo.jp/my/top*",
            "http://www.nicovideo.jp/user*"
        ],
        "js": [
            "js/timeline.js",
            "js/message.js",
            "js/content.js"
        ],
        "css": [ "css/content.css" ],
        "run_at": "document_start"
    }]
}
